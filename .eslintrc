{
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "es6": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "no-template-curly-in-string": "off"
  },
  "overrides": [
    {
      "files": [
        "scripts/*.js"
      ],
      "env": {
        "node": true
      }
    }
  ]
}
