{
  extends: [
    "plugin:flowtype/recommended"
  ],
  parser: "babel-eslint",
  // https://github.com/eslint/eslint/issues/4344#issuecomment-197344872
  parserOptions: {
    ecmaVersion: 6,
    sourceType: "module",
    ecmaFeatures: {
      modules: true
    }
  },
  plugins: [
    "flowtype"
  ],
  rules: {
    'no-template-curly-in-string': 'off'
  }
}
